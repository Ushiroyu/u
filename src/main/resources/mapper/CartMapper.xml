<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.community.mapper.CartMapper">
    <resultMap id="CartMap" type="com.example.community.entity.Cart">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="total_price" property="totalPrice"/>
        <result column="goods_num" property="goodsNum"/>
    </resultMap>
    <resultMap id="CartItemMap" type="com.example.community.entity.CartItem">
        <id column="id" property="id"/>
        <result column="cart_id" property="cartId"/>
        <result column="goods_id" property="goodsId"/>
        <result column="goods_store_id" property="goodsStoreId"/>
        <result column="goods_num" property="goodsNum"/>
        <result column="spec_key" property="specKey"/>
        <result column="spec_key_name" property="specKeyName"/>
    </resultMap>
    <resultMap id="CartWithItems" type="com.example.community.entity.Cart" extends="CartMap">
        <collection property="cartItems" column="id" ofType="com.example.community.entity.CartItem" select="selectCartItems">
            <id column="id" property="id"/>
            <result column="cart_id" property="cartId"/>
            <result column="goods_id" property="goodsId"/>
            <result column="goods_store_id" property="goodsStoreId"/>
            <result column="goods_num" property="goodsNum"/>
            <result column="spec_key" property="specKey"/>
            <result column="spec_key_name" property="specKeyName"/>
        </collection>
    </resultMap>
    <select id="selectCartWithItems" resultMap="CartWithItems">
        select
            c.id,
            c.user_id,
            c.total_price,
            c.goods_num
        from `cart` c
        where c.user_id = #{userId}
    </select>
    <select id="selectCartItems" resultMap="CartItemMap">
        select
            ci.id,
            ci.cart_id,
            ci.goods_id,
            ci.goods_store_id,
            ci.goods_num,
            ci.spec_key,
            ci.spec_key_name
        from `cart_item` ci
        where ci.cart_id = #{id}
    </select>
    <select id="selectStoreCount" resultType="integer">
        select 
               count(g.goods_store_id) 
        from cart_item c 
            left join goods g on c.goods_id = g.id 
        where c.cart_id = #{cartId}
    </select>
</mapper>
